// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Department model
model Department {
  id        String   @id @default(cuid())
  name      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  students     Student[]
  coordinators Coordinator[]

  @@map("departments")
}

// Student model (RegisteredStudent in frontend)
model Student {
  id              String   @id
  name            String
  password        String?
  profileImageUrl String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Department relation
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])

  // Relations
  participatedPrograms ProgramParticipant[]
  coordinatedPrograms  ProgramCoordinator[]
  activities           StudentActivity[]

  @@map("students")
}

// Coordinator model
model Coordinator {
  id        String   @id @default(cuid())
  name      String
  password  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Department relation
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])

  @@map("coordinators")
}

// Program model
model Program {
  id          String   @id @default(cuid())
  title       String
  description String
  date        String
  time        String
  venue       String
  coordinator String   // Main coordinator name (text)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  participants  ProgramParticipant[]
  coordinators  ProgramCoordinator[]

  @@map("programs")
}

// Join table for Program-Student (participants)
model ProgramParticipant {
  programId String
  studentId String

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@id([programId, studentId])
  @@map("program_participants")
}

// Join table for Program-Student (coordinators)
model ProgramCoordinator {
  programId String
  studentId String

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@id([programId, studentId])
  @@map("program_coordinators")
}

// Student Extra Activity model
model StudentActivity {
  id        String   @id @default(cuid())
  badge     String   // 'green' or 'yellow'
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Student relation
  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("student_activities")
}

// Officer model (Program Officer)
model Officer {
  id        String   @id
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("officers")
}

// Homepage Image model
model HomepageImage {
  id          String   @id @default(cuid())
  url         String
  title       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("homepage_images")
}
